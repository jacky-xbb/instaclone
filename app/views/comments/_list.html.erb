<%= turbo_frame_tag dom_id(post, :comments_list) do %>
  <% post.comments.each do |comment| %>
    <div class="flex justify-between space-y-1">
      <div><span class="font-semibold"><%= comment.user.username %>:</span> <%= comment.body %></div>

      <%= render "comments/thumb", comment: comment %>
    </div>
  <% end %>
<% end %>
