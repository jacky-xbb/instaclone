<%= turbo_frame_tag dom_id(post, :like) do %>
  <% if post.liked_by?(current_user) %>
    <%= button_to post_likes_path(post), method: :delete, data: { turbo_method: :delete } do %>
      <%= image_tag("liked.png", class: "h-6 w-6") %>
    <% end %>
  <% else %>
    <%= button_to post_likes_path(post), method: :post do %>
      <%= image_tag("like.png", class: "h-6 w-6") %>
    <% end %>
  <% end %>
<% end %>
